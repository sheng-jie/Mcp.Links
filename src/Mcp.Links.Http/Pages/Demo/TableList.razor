@namespace Mcp.Links.Http.Pages.Demo

@using System.ComponentModel
@using AntDesign.TableModels
@using AntDesign

@page "/list/table-list"

<Table TItem="IData" DataSource="@data" OnRowClick="OnRowClick">
    <AntDesign.Column Title="Name" TData="string">
        <a>@context.Name</a>
    </AntDesign.Column>
    <AntDesign.Column Title="Age" TData="int">
        @context.Age
    </AntDesign.Column>
    <AntDesign.Column Title="Address" TData="string">
        @context.Address
    </AntDesign.Column>
    <AntDesign.Column @bind-Field="@context.Tags" TData="string[]">
        @foreach (var tag in context.Tags)
        {
            var color = tag.Length > 5 ? TagColor.GeekBlue : TagColor.Green;
            if (tag == "loser")
            {
                color = TagColor.Volcano;
            }
            <Tag Color="@color">@tag</Tag>
        }
    </AntDesign.Column>
    <ActionColumn Title="Action">
        <Space Size="SpaceSize.Middle">
            <SpaceItem>
                <a>Invite @context.Name</a>
            </SpaceItem>
            <SpaceItem>
                <a>Delete</a>
            </SpaceItem>
        </Space>
    </ActionColumn>
</Table>

